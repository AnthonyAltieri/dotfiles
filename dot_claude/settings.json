{
  "model": "opus",
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline-command.sh"
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "W=$(tmux display-message -p '#W'); case \"$W\" in *!) ;; *) tmux rename-window \"${W}!\" ;; esac"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "tmux rename-window \"$(tmux display-message -p '#W' | sed 's/!$//')\""
          }
        ]
      }
    ]
  }
}
